{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "acf/latest-posts",
    "title": "Latest Posts",
    "description": "A custom Latest Posts block",
    "category": "acf",
    "usesContext": [ "allowResize", "imageCrop", "fixedHeight" ],
    "icon": "admin-post",
    "keywords": [ "latest", "posts" ],
    "acf": {
        "mode": "preview",
        "renderTemplate": "latest-posts.php"
    },
    "attributes": {
        "align": {
            "type": "string",
            "default": "full"
        },
        "alignContent": {
            "type": "string",
            "default": "center left"
        }
    },
    "supports": {
        "align": [
            "wide",
            "full"
        ],
        "anchor": true,
        "alignContent": "matrix",
        "alignText": true,
        "fullHeight": true,
        "html": true,
        "jsx": true,
        "multiple": true,
        "reusable": false
    },
    "style": ["swiperjs-style", "file:./latest-posts.css"],
    "script": [ "swiperjs-script", "latest-posts-script"]
}